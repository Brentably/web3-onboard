{
  "extends": "../../tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true
  }
}
