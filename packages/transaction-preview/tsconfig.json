{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "paths": {
      "*": ["./src/*", "./node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "outDir": "dist"
}
